<h3>Documentation</h3>

<% if current_user %>
  <%= form_for(@documentation) do |f| %>

    <% if @documentation.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@documentation.errors.count, "error") %> Error. </h2>

        <ul>
        <% @documentation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.hidden_field :user_id %>

    <div class="field">
      <%= f.label :text, "Question 1." %><br />
      <%= f.text_field :text%>
    </div>

    <div class="field">
      <%= f.label :text, "Question 2." %><br />
      <%= f.text_field :text%>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<% end %>
